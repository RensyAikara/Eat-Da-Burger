<div class="row">
    <div class="col-6" id="secondRow">
        <ul>
            {{#each burgers}}
                {{#unless devoured}}
                    <span> {{this.id}} . {{this.burger_name}} </span>
                    <button type="button" class="devourBurger" data-id="{{this.id}}" data-newDevoured="{{devour}}">DEVOUR</button>
                    <hr>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-6" id="thirdId">
        {{#each burgers}}
            {{#if devoured}}
                <span> {{this.id}} . {{this.burger_name}} </span>
                <hr>
            {{/if}}
        {{/each}}
    </div>
</div>

<div class="row" id="addingBurger">
    <div class="col-12">
        <form class="create-form">
            <div class="form-group">
                <label for="newburger">Burger Name:</label>
                <input type="text" id="newburger" name="burger">
                <button type="submit" id="submitButton">Add Burger</button>
            </div>   
        </form>
    </div>
</div>



